@model LAPS.SJK.UI.Models.LanguageModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @using (Html.BeginForm())
            {
        <div class="form-group">
            @Html.Label("Language", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">

                @Html.DropDownListFor(model => model.Selected, Model.Options, "Select Language", new { @class = "form-control col-md-2", onchange = "this.form.submit();" })

                @Html.ValidationMessageFor(model => model.Selected, "", new { @class = "text-danger" })
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="form-group">
        <div class="col-md-4">
        </div>
    </div>
</div>
<div class="panel">
    <div class="panel-body">

        <h3 class="title-hero">
            Responsive data tables
        </h3>

        <div class="example-box-wrapper">
            <table id="datatable-responsive" class="table table-striped table-bordered responsive no-wrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Language")
                        </th>
                        <th>
                            @Html.DisplayName("Name")
                        </th>
                        <th>
                            @Html.DisplayName("Value")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayName("Language")
                        </th>
                        <th>
                            @Html.DisplayName("Name")
                        </th>
                        <th>
                            @Html.DisplayName("Value")
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.List)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.c_flag)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.value)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { name = item.name, c_flag = item.c_flag }) |
                                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                @Html.ActionLink("Delete", "Delete", new { name = item.name, c_flag = item.c_flag })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>



        <div class="form-group">
            <div class="bg-default content-box text-center pad20A mrg25T">
                @Html.ActionLink("Buat Baru", "Add", "Language", new { @class = "btn btn-primary" })
            </div>

        </div>
    </div>
</div>
